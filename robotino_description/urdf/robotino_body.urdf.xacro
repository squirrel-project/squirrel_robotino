<?xml version="1.0"?>
<root xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="body" params="name">
  
    <link name="${name}_footprint"/>
	<joint name="${name}_footprint_joint" type="fixed">
		<origin xyz="0 0 0" rpy="0 0 0" />
		<child link="${name}_link" />
		<parent link="${name}_footprint"/>
	</joint>

   <link name="${name}_link">
      <inertial>
        <mass value="${BASE_MASS}" />
        <origin xyz="0 0 0" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0"
          iyy="1.0" iyz="0.0"
          izz="1.0" />
      </inertial>
      <visual>
        <origin xyz="0.01 0 0" rpy="0 0 ${M_PI/2}"/>
        <geometry>
          <mesh filename="package://robotino_description/meshes/RobotinoBody.dae" scale="${M_SCALE} ${M_SCALE} ${M_SCALE}"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0.01 0 0" rpy="0 0 ${M_PI/2}"/>
        <geometry>
          <mesh filename="package://robotino_description/meshes/RobotinoBody.dae" scale="${M_SCALE} ${M_SCALE} ${M_SCALE}"/>
        </geometry>
      </collision>
    </link>
    <base_gazebo name="base" />
    
    <wheel name="wheel0" parent="base_link">
      <origin xyz="0.065 0.11 0.04" rpy="0 0 ${M_PI/3}"/>
      <axis xyz="-1 0 0"/>
    </wheel>
    <wheel_transmission name="wheel0" />
    <wheel_gazebo name="wheel0" />
    <wheel name="wheel1" parent="base_link">
      <origin xyz="-0.13 0 0.04" rpy="0 0 0"/>
      <axis xyz="1 0 0"/>
    </wheel>
    <wheel_transmission name="wheel1" />
    <wheel_gazebo name="wheel1" />
    <wheel name="wheel2" parent="base_link">
      <origin xyz="0.065 -0.11 0.04" rpy="0 0 -${M_PI/3}"/>
      <axis xyz="-1 0 0"/>
    </wheel>
    <wheel_transmission name="wheel2" />
    <wheel_gazebo name="wheel2" />


    <command_bridge name="command_bridge" parent="base_link">
      <origin xyz="-0.05 0 0.13" rpy="0 0 ${M_PI/2}"/>
    </command_bridge>
     
  </xacro:macro>

  <!-- WHEEL -->
  <xacro:macro name="wheel" params="parent name *origin *axis">
    <joint name="${name}_joint" type="continuous">
      <parent link="${parent}"/>
      <child link="${name}_link" />
      <insert_block name="origin" />
      <insert_block name="axis" />
    </joint>
    
    <link name="${name}_link">
      <inertial>
        <mass value="0.4" />
        <origin xyz="0 0 0" />
        <inertia ixx="0.012411765597" ixy="-0.000711733678" ixz="0.00050272983" iyy="0.015218160428" iyz="-0.000004273467" izz="0.011763977943"/>
      </inertial>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
		  <!--cylinder length="0.04" radius="0.04"/-->
          <mesh filename="package://robotino_description/meshes/RobotinoWheel.dae" scale="${M_SCALE} ${M_SCALE} ${M_SCALE}"/>
        </geometry>
      </visual>
    
      <collision>
        <origin xyz="0 0 0" rpy="0 ${M_PI/2} 0" />
        <geometry>
          <!--mesh filename="package://robotino_description/meshes/RobotinoWheel.dae" scale="${M_SCALE} ${M_SCALE} ${M_SCALE}"/-->
          <cylinder length="0.04" radius="0.04"/>
        </geometry>
      </collision>
      
    </link>
  </xacro:macro>

  <!-- Wheel transmission   -->
  <xacro:macro name="wheel_transmission" params="name">
    <transmission name="${name}_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${name}_joint" >
        <hardwareInterface>VelocityJointInterface</hardwareInterface>
      </joint>
      <actuator name="${name}_motor">
        <hardwareInterface>VelocityJointInterface</hardwareInterface>
        <mechanicalReduction>${624/35 * 80/18}</mechanicalReduction>
      </actuator>
    </transmission>
  </xacro:macro>
  
  <!-- COMMAND BRIDGE -->
  <xacro:macro name="command_bridge" params="parent name *origin">
    <joint name="${name}_joint" type="fixed">
      <insert_block name="origin" />
      <parent link="${parent}"/>
      <child link="${name}_link" />
    </joint>
    
    <link name="${name}_link">
      <inertial>
        <mass value="0.00001" />
        <origin xyz="0 0 0" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0"
          iyy="1.0" iyz="0.0"
          izz="1.0" />
      </inertial>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <box size="0.25 0.11 0.16"/>
        </geometry>
      </collision>
    </link>
  </xacro:macro>

</root>

